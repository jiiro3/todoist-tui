  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/todoist-tui.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/todoist-tui/issues"
  },
  "homepage": "https://github.com/yourusername/todoist-tui#readme",
